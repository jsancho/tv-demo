{
  "name": "tvdemo",
  "version": "1.0.0",
  "scripts": {
    "start": "cross-env EXPO_TV=1 expo start",
    "android": "cross-env EXPO_TV=1 expo run:android",
    "ios": "cross-env EXPO_TV=1 expo run:ios",
    "web": "expo start --web",
    "prebuild:tv": "cross-env EXPO_TV=1 expo prebuild --clean",
    "prebuild": "expo prebuild --clean",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "lint": "expo lint"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.1",
    "expo": "^54.0.20",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "npm:react-native-tvos@0.81-stable",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@react-native-tvos/config-tv": "^0.1.4",
    "@types/react": "~19.1.10",
    "cross-env": "^10.1.0",
    "eslint": "^9.0.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.0",
    "typescript": "~5.9.2"
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native"
      ]
    }
  },
  "private": true
}
